<ModOps>

    <ImyaTweaks Title="Revert balance changes defense towers" Description="You do not like the changes that rebalance the damage of defense towers? Disable those here and revert back to the vanilla values" Icon="data/ui/2kimages/main/icons/icon_resource_damage.png" />

    <!-- #Revert balance changes defense towers -->
    <Group ModOpID="RevertBalanceChangesDefenseTowers">
        <!-- ****************** START REBALANCING TOWERS ******************  -->

        <!-- Big Bertha -->
        <ModOp GUID='102450,1010524' Type="merge" Path="/Values">
            <Attacker>
                <BaseDamage>850</BaseDamage>
            </Attacker>
            <Attackable>
                <MaximumHitPoints>7000</MaximumHitPoints>
            </Attackable>
        </ModOp>
        <ModOp GUID='101955' Type="merge" Path="/Values/Exploder">
            <InnerDamage>850</InnerDamage>
        </ModOp>

        <!-- Cannon Tower-->
        <ModOp GUID='1010523' Type="merge" Path="/Values">
            <Attacker>
                <ReloadTime>50</ReloadTime>
                <BaseDamage>150</BaseDamage>
            </Attacker>
            <Attackable>
                <MaximumHitPoints>4800</MaximumHitPoints>
            </Attackable>
        </ModOp>

        <!-- Puckle Gun -->
        <ModOp GUID='1010522' Type="merge" Path="/Values">
            <Attacker>
                <BaseDamage>23</BaseDamage>
            </Attacker>
            <Attackable>
                <MaximumHitPoints>3200</MaximumHitPoints>
            </Attackable>
        </ModOp>

        <!-- Anti-Armor Gun -->
        <ModOp GUID='3700' Type="merge" Path="/Values">
            <Attacker>
                <AttackRange>65</AttackRange>
                <BaseDamage>500</BaseDamage>
            </Attacker>
            <Attackable>
                <MaximumHitPoints>3750</MaximumHitPoints>
            </Attackable>
        </ModOp>

        <!-- Flame Tower -->
        <ModOp GUID='625,824,632,823' Path="/Values" Type="merge">
            <Attackable>
                <MaximumHitPoints>1701</MaximumHitPoints>
            </Attackable>
            <Attacker />
        </ModOp>
        <ModOp Type="merge" GUID='628' Path="/Values/Projectile/Effectivities/Item[GUID='1398']">
            <Factor>5.75</Factor>
        </ModOp>
        <ModOp Type="merge" GUID='628' Path="/Values/Projectile/Effectivities/Item[GUID='1404']">
            <Factor>0.75</Factor>
        </ModOp>

        <!-- Change PuckleGun Debuff -->
        <ModOp GUID='191305' Type="replace" Path="/Values/VehicleUpgrade/ForwardSpeedUpgrade/Value">
            <Value>-50</Value>
        </ModOp>
        <ModOp GUID='191305' Type="replace" Path="/Values/AttackerUpgrade/AttackSpeedUpgrade">
            <AttackSpeedUpgrade>-30</AttackSpeedUpgrade>
        </ModOp>
        <ModOp GUID='191305' Type="replace" Path="/Values/AttackerUpgrade/ReloadTimeUpgrade/Value">
            <Value>44</Value>
        </ModOp>

        <!-- ****************** END REBALANCING TOWERS ******************  -->
    </Group>

    <ImyaExpose Path="*" ModOpID="RevertBalanceChangesDefenseTowers" ExposeID="Revert balance changes for defense towers" Description="[Toggle: on = Back to vanilla item values, Toggle: off = rebalanced values" Kind="SkipToggle"></ImyaExpose>

</ModOps>