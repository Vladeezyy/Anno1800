<ModOps>

<!-- # Modular Fertiliser Factory -->
<!-- Buff Distance -->
    <ModOp Type="replace" GUID="24805" Path="/Values/BuffFactory/BaseBuffDistance" ModOpID="FertiliserBuffDistance">
        <BaseBuffDistance>20</BaseBuffDistance>
    </ModOp>

    <ImyaTweaks Title="Features of Hacienda Overhaul: Modular Hacienda Fertiliser Works" Description="Adjust the features of the module, concerning the values of the Hacienda Fertiliser Works." Icon="data/ui/2kimages/main/3dicons/scenario/goods/icon_fertilizer_good.png" />
    <ImyaExpose Path="self::BaseBuffDistance" ModOpID="FertiliserBuffDistance" ExposeID="Fertiliser Works: Buff Distance" Description="This value sets the radius of the Buff provided by the Hacienda Fertiliser Works [in tiles]." />

<!-- Cycle Time -->
    <ModOp Type="add" GUID="24805" Path="/Values/FactoryBase" ModOpID="FertiliserCycleTime">
        <CycleTime>30</CycleTime>
    </ModOp>

    <ImyaExpose Path="self::CycleTime" Kind="Enum" ModOpID="FertiliserCycleTime" ExposeID="Fertiliser Works: Cycle Time" Description="This value sets the cycle time of the Hacienda Fertiliser Works [in seconds].">
        <FixedValues>
            <Value>30</Value>
            <Value>60</Value>
            <Value>90</Value>
            <Value>120</Value>
        </FixedValues>
    </ImyaExpose>

<!-- Fertilizer Works Industrializable Toggle -->
    <Group ModOpID="FertiliserIndustrializable">
        <ModOp Type="replace" GUID="24805" Path="/Template">
            <Template>BuffFactoryCultureIndustrializable_Taludas</Template>
        </ModOp>
    </Group>

    <ImyaExpose Path="*" Kind="SkipToggle" InitState="True" ModOpID="FertiliserIndustrializable" ExposeID="Fertiliser Works: Industrializable" Description="Switch on to enable electricity boost for the Hacienda Fertiliser Works."></ImyaExpose>

<!-- Internal Storage -->
    <ModOp Type="add" GUID="24805" Path="/Values/FactoryBase">
        <ClampMaxTransporterLogisticCost>1</ClampMaxTransporterLogisticCost>
        <ClampedMaxTransporterLogisticCost>67</ClampedMaxTransporterLogisticCost>
    </ModOp>

    <ModOp Type="replace" GUID="24805" Path="//StorageAmount" ModOpID="FertiliserStorageAmount">
        <StorageAmount>5</StorageAmount>
    </ModOp>

    <ImyaExpose Path="self::StorageAmount" Kind="Slider" ModOpID="FertiliserStorageAmount" ExposeID="Fertiliser Works: Internal Storage Amount" Description="This value sets the internal storage of the Hacienda Fertiliser Works [in tones]. It will not mess with the range of its Transporters.">
        <SliderDefinition Min="1" Max="10" Stepping="1" />
    </ImyaExpose>

<!-- Hacienda Dependent Toggle -->
    <Group ModOpID="FertiliserHaciendaDependent">
        <ModOp Type="replace" GUID="24805" Path="/Values/Pausable/IsHaciendaDependent">
            <IsHaciendaDependent>0</IsHaciendaDependent>
        </ModOp>
    </Group>

    <ImyaExpose Path="*" Kind="SkipToggle" InitState="True" ModOpID="FertiliserHaciendaDependent" ExposeID="Fertiliser Works: Hacienda Dependency" Description="Switch on to remove the requirement for the Hacienda Works to be inside the Hacienda Range"></ImyaExpose>

<!-- Modify buff for different amounts of extra goods -->
    <ModOp Type="replace" GUID="24806" Path="/Values/FactoryUpgrade/AdditionalOutput/Item[Product = '24807']/AdditionalOutputCycle" ModOpID="FertiliserAdditionalOutput">
        <AdditionalOutputCycle>3</AdditionalOutputCycle>
    </ModOp>

    <ImyaExpose Path="self::AdditionalOutputCycle" Kind="Slider" ModOpID="FertiliserAdditionalOutput" ExposeID="Fertiliser Works: AdditionalOutputAmountPerCycle" Description="This value sets the ratio of Dung generated by the animal farms in range of the Hacienda Fertiliser Works [in 1/value].">
        <SliderDefinition Min="1" Max="10" Stepping="1" />
    </ImyaExpose>

</ModOps>