              <BonusNeed>1010246</BonusNeed>
            </Item>
          </ModOp>
        </Group>
        <Group><!-- Artisans -->
          <ModOp Type="addNextSibling" GUID="15000002" Path="/Values/PopulationLevel7/PopulationInputs/Item[Product='1010247']">
            <Item>
              <Product>1010246</Product>
              <Amount>0.00065359</Amount>
              <HappinessValue>2</HappinessValue>
