      </Group>
    <!-- Moving the production chain of Pocket Watches from Engineers to Artisan. For compatibility reasons, this is in the Mod Adjustments sub-mod -->
      <Group Skip="1">
        <ModOp Type="remove" GUID="25000192,500945" Path="/Values/ConstructionCategory/BuildingList/Item[Building='500015']"></ModOp>
        <ModOp Type="addNextSibling" GUID="25000191,500945" Path="/Values/ConstructionCategory/BuildingList/Item[Building='500019']">
          <Item>
            <Building>500015</Building>
          </Item>
        </ModOp>
        <ModOp Type="remove" GUID="130224" Path="/Values/Trigger/TriggerActions/Item/TriggerAction/Values/ActionUnlockAsset/UnlockAssets/Item[Asset='140042']"></ModOp>
      </Group>
    <!-- Production Adjustments -->
      <Group>
        <ModOp Type="merge" GUID="1010324" Path="/Values">
          <Selection>
            <ParticipantMessageArcheType>Resident_tier03_atWork</ParticipantMessageArcheType>
          </Selection>
          <FactoryBase>
            <FactoryInputs>
              <Item />
              <Item>
                <Product>1010204</Product>
              </Item>
            </FactoryInputs>
			      <CycleTime>60</CycleTime>
          </FactoryBase>
          <Maintenance>
            <Maintenances>
              <Item>
                <Product>1010017</Product>
                <Amount>500</Amount>
                <InactiveAmount>225</InactiveAmount>
              </Item>
              <Item>
                <Product>1010116</Product>
              </Item>
            </Maintenances>
          </Maintenance>
          <Industrializable>
            <MandatoryIndustrialization>0</MandatoryIndustrialization>
          </Industrializable>
        </ModOp>
        <ModOp Type="remove" GUID="1010324,1010282,1010307,1010308" Path="/Values/Cost/Costs/Item[Ingredient='1010202']/Amount"></ModOp>
        <ModOp Type="remove" GUID="1010324" Path="/Values/Cost/Costs/Item[Ingredient='6280']/Amount" Condition="#cable_works_kurila"></ModOp>
        <ModOp Type="replace" GUID="500015" Path="/Values/ProductionChain/Tier1/Item[Building='1010327']">
          <Item>
            <Building>1010282</Building>
            <Tier2>
              <Item>
                <Building>1010307</Building>
              </Item>
              <Item>
                <Building>1010308</Building>
              </Item>
            </Tier2>
          </Item>
        </ModOp>
        <ModOp Type="add" GUID="500015" Path="/Values/ProductionChain/Tier1/Item[Building= 1010282]/Tier2" Condition="#metal_works_kurila">
          <Item>
            <Building>1010304</Building>
          </Item>
        </ModOp>
      </Group>
    <!-- Item Adjustments -->
      <Group>
        <!-- Hans Klein, Old Grandfather Time -->
          <Group>
            <ModOp Type="merge" GUID="191324" Path="/Values">
		          <FactoryUpgrade>
                <AdditionalOutput>
                  <Item>
                    <Product>1010250</Product>
                    <AdditionalOutputCycle>5</AdditionalOutputCycle>
                    <Amount>1</Amount>
                  </Item>
                </AdditionalOutput>
                <ReplaceInputs>
                  <Item>
                    <OldInput>1010204</OldInput>
                    <NewInput>1010249</NewInput>
                  </Item>
                </ReplaceInputs>
              </FactoryUpgrade>
              <BuildingUpgrade>
                <MaintenanceUpgrade>
                  <Value>20</Value>
                  <Percental>1</Percental>
                </MaintenanceUpgrade>
                <WorkforceAmountUpgrade>
                  <Value>20</Value>
                  <Percental>1</Percental>
                </WorkforceAmountUpgrade>
              </BuildingUpgrade>
            </ModOp>
            <ModOp Type="remove" GUID="191324" Path="/Values/BuildingUpgrade/ReplacingWorkforce"></ModOp>
          </Group>
        <!-- Susannah Brightwoman -->
          <ModOp Type="remove" GUID='113799' Path="/Values/ItemEffect/EffectTargets/Item[GUID='1010324']"></ModOp>
        <!-- Chronometrist Chiara -->
          <Group>
            <ModOp Type="merge" GUID="191323" Path="/Values/FactoryUpgrade">
              <ProductivityUpgrade>
                <Value>40</Value>
                <Percental>1</Percental>
              </ProductivityUpgrade>
            </ModOp>
            <ModOp Type="replace" GUID="191323" Path="/Values/FactoryUpgrade/ReplaceInputs">
              <AdditionalOutput>
                <Item>
                  <Product>1010204</Product>
                  <AdditionalOutputCycle>5</AdditionalOutputCycle>
                  <Amount>1</Amount>
                </Item>
              </AdditionalOutput>
            </ModOp>
          </Group>
        <!-- Precision Horologist -->
          <Group>
            <ModOp Type="merge" GUID="191322" Path="/Values">
              <FactoryUpgrade>
                <AdditionalOutput>
                  <Item>
                    <Product>1010241</Product>
                    <AdditionalOutputCycle>5</AdditionalOutputCycle>
                    <Amount>1</Amount>
                  </Item>
                </AdditionalOutput>
              </FactoryUpgrade>
            </ModOp>
